extends ./layout.jade
block contenido
	h1 hola mundo
	form(action="/save",method="POST",class="form-horizontal")
		div.form-group
			label(for="name") Nombre
			input(name="name",type="text",id="name",class="form-control")
		div.form-group
			label(for="age") Edad
			input(name="age",type="number",id="age",class="form-control")
		div.form-group
			label(for="username") Nick
			input(name="username",type="text",id="username",class="form-control")
		div.form-group
			label(for="email") Correo Electronico
			input(name="email",type="text",id="email",class="form-control")
		div.form-group
			label(for="password") Contraseña
			input(name="password",type="password",id="password",class="form-control")
		div.form-group
			label(for="password_confirmation") Confirmar Contraseña
			input(name="password_confirmation",type="password",id="password_confirmation",class="form-control")
		div.form-group
			input(type="submit",class="btn btn-success")